# Defining a compiler
CC = gcc
# Flags
CFLAGS = Wall -Werror -Wextra -pedantic
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
all: $(OBJ)
	$(CC) -(CFLAGS) $(OBJ) -o $(NAME)
clean:
	$(RM) *.swp *~ $(NAME)
oclean:
	$(RM) $(OBJ)
fclean: clean oclean
	$(RM) *.swp *~ school $(OBJ)
re: oclean clean
